@*
    Para mostrar productos desde DDBB
*@
@{
}
<table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Foto</th>
            <th>Acciones</th>
        </tr>
        @foreach (var p in ViewBag.productos)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
                <td>@p.Cantidad</td>
                <td><img src="~/imagenes/@p.Foto" width="150" height="150"></td>
                <td>
                    <a class="btn btn-alert" href="@Url.Action("Editar", "EjemploDDBB", new { id = p.Id })" >Modificar</a>
                    <a class="btn btn-alert" href="@Url.Action("Eliminar", "EjemploDDBB", new { id = p.Id })">Eliminar</a>
                </td>
            </tr>
        }
    </table>