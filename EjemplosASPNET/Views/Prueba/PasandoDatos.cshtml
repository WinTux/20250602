
@if (ViewBag.fechaNacimiento == null)
{
    <p>No se ha proporcionado información de la persona.</p>
}

else { 
    <div>
        Edad: @ViewBag.edad
        <br>
        Nombre completo: @ViewBag.nombre
        <br>
        Es casado: @ViewBag.casado
        <br>
        Peso: @ViewBag.peso
        <br>
        Fecha de nacimiento: @ViewBag.fechaNacimiento.ToString("dd/MM/yyyy")
        <br>

    </div>
}

<!-- Ejemplo de cómo pasar datos desde el controlador a la vista usando ViewBag -->

<h3>Datos del producto</h3>
@if (ViewBag.producto == null)
{
    <p>No se ha proporcionado información del producto.</p>
}
else
{
    <div>
    Nombre del producto: @ViewBag.producto.Nombre<br>
    Precio del producto: @ViewBag.producto.Precio
    <br>
    Código del producto: @ViewBag.producto.Id
    <br>
    Cantidad del producto: @ViewBag.producto.Cantidad
    <br>
    Foto del producto: <img src="~/imagenes/@ViewBag.producto.Foto" width="150">
</div>
}

<h3>Datos de varios productos</h3>
@if (ViewBag.productos == null)
{
    <p>No se han proporcionado productos.</p>
}
else
{
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Foto</th>
        </tr>
        @foreach (var p in ViewBag.productos)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
                <td>@p.Cantidad</td>
                <td><img src="~/imagenes/@p.Foto" width="150" height="150"></td>
            </tr>
        }
    </table>
}