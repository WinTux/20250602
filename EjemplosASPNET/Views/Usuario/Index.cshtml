@model EjemplosASPNET.Models.Usuario
<h3>Formulario de registro</h3>
<h5>Ejemplo de validación</h5>

<form asp-controller="Usuario" asp-action="Guardar" method="post">
    <table class="table">
        <tr>
            <td>Usuario:</td>
            <td>
                <input asp-for="nombre"/>
            </td>
            <td>
                <span asp-validation-for="nombre"></span>
            </td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>
                <input type="password" asp-for="password" />
            </td>
            <td>
                <span asp-validation-for="password"></span>
            </td>
        </tr>
        <tr>
            <td>Edad:</td>
            <td>
                <input asp-for="edad" />
            </td>
            <td>
                <span asp-validation-for="edad"></span>
            </td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>
                <input asp-for="email" />
            </td>
            <td>
                <span asp-validation-for="email"></span>
            </td>
        </tr>
        <tr>
            <td>Página Web:</td>
            <td>
                <input asp-for="pagina" />
            </td>
            <td>
                <span asp-validation-for="pagina"></span>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Registrar" />
            </td>
        </tr>
    </table>
</form>
